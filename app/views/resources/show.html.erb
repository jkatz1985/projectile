<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Resource #<%= @resource.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @resource.user_id %></dd>

              <dt>Project</dt>
              <dd><%= @resource.project_id %></dd>

              <dt>Resource question</dt>
              <dd><%= @resource.resource_question %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/resources" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/resources/<%= @resource.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_resource/<%= @resource.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
